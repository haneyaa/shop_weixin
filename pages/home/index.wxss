/* pages/home/index.wxss */
.swiper-item{
  display: block;
}
.slide-image {
  width: 100%;
}
swiper {
  width: 100%;
}

.category {
  padding: 15px 0 10px 0;
  overflow: auto;
  background-color: #FFF;
  margin-bottom: 10px;
}
.category_item {
  width: 25%;
  float: left;
  margin-bottom: 10px;
}
.icon_wrap {
  width: 40px;
  margin: 0 auto;
  margin-bottom: 5px;
}
.index_icon {
  width: 40px;
  height: 40px;
}
.category_item_text {
  text-align: center;
  font-size: 13px;
  color: #737373;
}
.category_item_wrap_hover{
   opacity: 0.9;
   transform: scale(0.9,0.9);
   
}

.toutiaocontent{
  display: flex;
  flex-direction: row;
  height: 150rpx;
  
  background-color: rgb(255, 255, 255);
  border:1rpx solid #ff0303;
  border-radius: 5px;
  box-shadow:2rpx 2rpx 5rpx #969696;
  font-size: 12px;
  color: #969696;
}
.toutiao{
  display: flex;
  flex-direction: column;
}
.toutiao_img{
  
  width:130rpx;
  height: 130rpx;
  margin: 10rpx 0rpx 15rpx 10rpx;
  flex-shrink: 0;
}
.toutiao_item{
 display: flex;
  flex-direction: column;
 
  width: 590rpx;
  height: 40rpx;
  margin: 3rpx 0rpx 0rpx 10rpx;
  line-height: 40rpx;
  /* border:1rpx solid #ff0303; */
  flex-shrink: 0;
}

.goodlist{
  
   display: flex;
  flex-direction: row;
  flex-wrap: wrap;
   height: 100%;
   background-color: white;
   margin: 20rpx 20rpx 15rpx;
   -moz-box-shadow:2rpx 2rpx 5rpx #969696;
   -webkit-box-shadow:2rpx 2rpx 5rpx #969696;
   box-shadow:2rpx 2rpx 5rpx #969696;
}
.gooditem{
  width:49%;
  margin: 5rpx 4rpx 0rpx 3rpx ;
  color: rgb(247, 247, 247);
  background-color: rgb(252, 200, 243);
  border-radius: 5px;
  box-shadow:2rpx 2rpx 5rpx #969696;
  text-align: center;
  font-size: 18px;
}

.gooditem image{
  width:335rpx;
 height: 200rpx;
 padding: 2px 2px 2px 2px;
 border: 1px solid rgb(252, 198, 50);
 border-radius: 5px;
}

